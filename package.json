{
  "name": "electron-learning",
  "version": "1.0.0",
  "description": "A minimal Electron application",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dist": "build"
  },
  "build": {
    "appId": "simpleMusicPlayer",
    "mac": {
      "category": "public.app-category.productivity"
    },
    "dmg": {
      "background": "build/installBg.png",
      "icon": "build/icon.icns",
      "iconSize": 100,
      "contents": [{
        "x": 380,
        "y": 280,
        "type": "link",
        "path": "/Applications"
      }, {
        "x": 110,
        "y": 280,
        "type": "file"
      }],
      "window": {
        "width": 500,
        "height": 500
      }
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ]
    },
    "win": {
      "target": "squirrel",
      "icon": "build/icon.ico"
    }
  },
  "repository": "https://github.com/1023mo/electron-learning.git",
  "keywords": [
    "Electron",
    "quick",
    "start",
    "tutorial",
    "demo"
  ],
  "author": "GitHub",
  "license": "CC0-1.0",
  "devDependencies": {
    "electron": "^5.0.2",
    "electron-builder": "^20.44.4"
  },
  "dependencies": {
    "bootstrap": "^4.3.1",
    "uuid": "^3.3.2"
  }
}
